{
  "name": "@telefonica/language-model-converter",
  "version": "3.2.1",
  "description": "Language model converter yaml <-> json for LUIS",
  "license": "Apache-2.0",
  "repository": "https://github.com/Telefonica/language-model-converter",
  "author": "TDAF <tdaf@tid.es>",
  "bin": {
    "language-model-converter": "./bin/language-model-converter"
  },
  "keywords": [
    "luis"
  ],
  "main": "lib/parser.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "shx rm -fR ./lib",
    "compile": "tsc",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run build",
    "security": "nsp check",
    "test": "npm run build && cross-env LOGOPS_LEVEL=fatal nyc mocha src/**/*.spec.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/test/*"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "dependencies": {
    "commander": "^2.11.0",
    "glob": "^7.1.2",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/commander": "^2.11.0",
    "@types/glob": "^5.0.33",
    "@types/js-yaml": "^3.9.1",
    "@types/lodash": "^4.14.78",
    "@types/mocha": "^2.2.43",
    "@types/node": "^6",
    "@types/sinon": "^2.3.6",
    "chai": "^4.1.2",
    "chai-eventemitter": "^1.1.1",
    "cross-env": "^5.1.1",
    "mocha": "^4.0.1",
    "nock": "^9.0.25",
    "nodemon": "^1.12.1",
    "nsp": "^2.8.1",
    "nyc": "^11.3.0",
    "parse-glob": "^3.0.4",
    "shx": "^0.2.2",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "engines": {
    "node": "~6.3.0"
  },
  "typings": "./lib/parser.d.ts"
}
